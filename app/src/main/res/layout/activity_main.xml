<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.MainActivity">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        app:titleTextColor="@color/white"
        app:title="@string/shopping_list"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/et_enter_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toStartOf="@id/iv_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_an_item"
        android:background="@drawable/bg_edittext"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginEnd="4dp"
        app:srcCompat="@drawable/ic_baseline_add_box_24"
        android:textColor="@color/white"
        android:layout_marginRight="4dp"
        tools:ignore="VectorDrawableCompat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_enter_item"
        app:layout_constraintTop_toTopOf="@id/et_enter_item"
        app:layout_constraintBottom_toBottomOf="@id/et_enter_item" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/bg_red_circle"
        android:gravity="center"
        android:maxLength="3"
        android:padding="4dp"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@id/iv_add"
        app:layout_constraintTop_toTopOf="@id/iv_add"
        android:textSize="12sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shopping"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_enter_item"/>

    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_baseline_add_shopping_cart_24"
        tools:ignore="VectorDrawableCompat"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_shopping"/>

    <TextView
        android:id="@+id/tv_cart_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/bg_blue_circle"
        android:gravity="center"
        android:maxLength="3"
        android:padding="5dp"
        android:layout_marginBottom="4dp"
        android:text="1"
        android:textColor="@color/white"
        android:layout_marginLeft="-4dp"
        android:layout_marginStart="-4dp"
        app:layout_constraintLeft_toRightOf="@id/iv_cart"
        app:layout_constraintBottom_toTopOf="@id/iv_cart"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_carted_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:gravity="center"
        android:padding="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/carted_item"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toEndOf="@id/iv_cart"
        app:layout_constraintTop_toTopOf="@id/iv_cart"
        app:layout_constraintBottom_toBottomOf="@id/iv_cart"
        android:textSize="18sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_carted_items"
        app:layout_constraintBottom_toTopOf="@id/tv_sync_time"/>

    <TextView
        android:id="@+id/tv_sync_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:gravity="center"
        android:padding="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp"
        android:text="@string/last_updated_on_holder"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_done"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/iv_done"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_baseline_done_24"
        tools:ignore="VectorDrawableCompat"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>